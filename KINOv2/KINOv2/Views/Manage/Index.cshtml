@model IndexViewModel
@{
    ViewData["Title"] = "Профиль";
    ViewData.AddActivePage(ManageNavPages.Index);
    string imgPath = "";
    if (Model.ProfileImage is null)
    {
        imgPath = Url.Content("~/images/Profiles/default.png");
    }
    else
    {
        imgPath = Url.Content("~/images/Profiles" + Model.ProfileImage);
    }
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-3">
        <img height="200" width="200" src="@imgPath" />
    </div>
    <div class="col-md-6">
        <div style="margin-bottom:5px;">
            <span>@Model.Username</span>
        </div>
        <div style="margin-bottom:5px;">
            <span>@Model.Name @Model.SurName, @Model.Age</span>
        </div>
        <div style="margin-bottom:5px;">
            <label class="text-info" style="width:60px" asp-for="@Model.City"></label>
            <span>@Model.City</span>
        </div>
        <div style="margin-bottom:5px;">
            <label class="text-info" style="width:60px" asp-for="@Model.Email"></label>
            <span>@Model.Email</span>
        </div>
        <div style="margin-bottom:5px;">
            <label class="text-info" style="width:60px" asp-for="@Model.About"></label>
            <p style="word-break:break-all">@Model.About</p>
        </div>
    </div>
</div>

<h4>Избранные фильмы</h4>
<div class="row">
    <form>

    </form>
</div>


