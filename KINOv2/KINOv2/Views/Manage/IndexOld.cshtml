    <div class="tab-content py-3 px-md-3 py-md-0 w-100 mt-2" id="myTabContent">
        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="row">
                <h2 class="col-12">Профиль</h2>
                <hr class="d-none d-sm-none d-md-block ml-3 col-lg-9" />
                <div class="col-12 col-sm-5 col-md-6 col-lg-4 order-md-1">
                    <img class="img-fluid img-thumbnail d-block mx-auto" src="@imgPath" style="width: 200px;height: 180px;object-fit: cover;" />
                </div>
                <div class="col-12 col-sm-7 col-md-6 col-lg-4 order-md-0 offset-lg-1 align-self-lg-center">
                    <div class="text-center mb-1">
                        <span class="h4 text-orange">@Model.Username</span>
                    </div>
                    <div class="text-center mb-1">
                        <span class="text-center">@Model.Name @Model.SurName, @Model.Age</span>
                    </div>
                    <div class="row">
                        <label class="text-info col-4 text-right" asp-for="@Model.Email"></label>
                        <span class="col">@Model.Email</span>
                    </div>
                    <div class="row">
                        <label class="text-info col-4 text-right" asp-for="@Model.City"></label>
                        <span class="col">@Model.City</span>
                    </div>

                </div>
                <h2 class="col-12 order-md-3">Избранные фильмы</h2>
                <div class="col-12 col-lg-10 order-md-4">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr>
                                <td>Название фильма</td>
                                <td class="w-25 text-center">Локальный рейтинг</td>
                                <td class="w-25 text-center">Рейтинг</td>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 5; i++)
                            {
                                <tr>
                                    <td><a class="text-info" href="#">PLACEHOLDER</a></td>
                                    <td class="text-center">0.0</td>
                                    <td class="text-center">0.00</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
            <div class="row">
                <h2 class="col-12">История заказов</h2>
                <hr class="w-100 d-none d-sm-none d-md-block ml-3 col-lg-9" />
                <div class="col-lg-10">
                    <table id="history-table" class="table table-hover bg-dark-blue">
                        <thead>
                            <tr>
                                <th class="border-top-0" data-breakpoints="xs sm">Зал</th>
                                <th class="border-top-0">Фильм</th>
                                <th class="border-top-0">Дата сеанса</th>
                                <th class="border-top-0" data-breakpoints="xs sm">Количество билетов</th>
                                <th class="border-top-0" data-breakpoints="xs ">Стоимость</th>
                                <th class="border-top-0" data-breakpoints="xs sm md">Дата оформления</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 5; i++)
                            {
                                <tr>
                                    <td>PLACEHOLDER</td>
                                    <td>PLACEHOLDER</td>
                                    <td>PLACEHOLDER</td>
                                    <td>PLACEHOLDER</td>
                                    <td>PLACEHOLDER</td>
                                    <td>PLACEHOLDER</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
            <div class="row">
                <h2 class="col-12">Настройка профиля</h2>
                <hr class="w-100 d-none d-sm-none d-md-block ml-3 col-lg-9" />
                <div class="col-12">
                    <form class="row" asp-action="ChangeProfileSettings" asp-controller="Manage" method="post">

                        <div class="col-12 col-lg-5 order-1 order-lg-0">
                            <div class="form-group">
                                <label class="text-info" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control control" style="color:#000000" />
                            </div>
                            <div class="form-group">
                                <label class="text-info" asp-for="Name"></label>
                                <input asp-for="Name" class="form-control control" />
                            </div>
                            <div class="form-group">
                                <label class="text-info" asp-for="SurName"></label>
                                <input asp-for="SurName" class="form-control control" />
                            </div>
                        </div>
                        <div class="align-items-center col-12 col-lg-5 d-flex flex-column form-group mb-0 order-0 order-lg-1 text-center">
                            <div class="mt-2"><img id="profile-image" class="img-fluid img-thumbnail d-block mx-auto" style="width: 200px;height: 180px;object-fit: cover;" src="/images/Profiles/default.png"></div>
                            <input class="mt-2 my-md-auto text-center" type="file" name="ProfileUploaded" onchange="ChangeImage(this.files);" id="ProfileUploaded">
                        </div>
                        <div class="col-12 col-lg-5 order-2 order-lg-2">
                            <div class="form-group">
                                <label class="text-info" asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control control" />
                            </div>
                            <div class="form-group">
                                <label class="text-info" asp-for="Age"></label>
                                <input asp-for="Age" class="form-control control" />
                            </div>
                            <div class="form-group">
                                <label class="text-info" asp-for="City"></label>
                                <input asp-for="City" class="form-control control" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 order-3 order-lg-3 mt-lg-3">
                            <div class="form-group text-center">
                                <label class="text-info" asp-for="PersonalInfoVisible"></label>
                                <input asp-for="PersonalInfoVisible" class="form-check-inline" />
                            </div>
                            <div class="form-group text-center">
                                <label class="text-info" asp-for="SelectedFilmsVisible"></label>
                                <input asp-for="SelectedFilmsVisible" class="form-check-inline" />
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 order-12 order-lg-4"><button type="submit" class="btn border-orange w-100">Сохранить</button></div>
                    </form>
                </div>
            </div>
        </div>
