@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Manage your account</h2>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <div class="row">
        <form asp-action="Index" asp-controller="Manage" data-ajax="true" data-ajax-method="POST" data-ajax-update="#Results" data-ajax-mode="replace">
            <div class="col-md-3">
                @await Html.PartialAsync("_ManageNav")
            </div>
            <div class="col-md-9">
                <div id="Results">
                    @RenderBody()
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
