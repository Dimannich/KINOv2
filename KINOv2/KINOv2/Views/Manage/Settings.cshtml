@model IndexViewModel
@{
    ViewData["Title"] = "Настройки";
    ViewData.AddActivePage(ManageNavPages.Settings);
    string imgPath;
    if (Model.ProfileImage == "" || Model.ProfileImage is null)
    {
        imgPath = Url.Content("~/images/Profiles/default.png");
    }
    else
    {
        imgPath = Url.Content("~/images/Profiles/" + Model.ProfileImage);
    }
}

<div class="row">
    <h2 class="col-12">Настройка профиля</h2>
    <hr class="w-100 d-none d-sm-none d-md-block ml-3 col-lg-9" />
    <div class="col-12">
        <form class="row" asp-action="Settings" asp-controller="Manage" method="post" enctype="multipart/form-data" role="form">
            <div class="col-12 col-lg-5 order-1 order-lg-0">
                <div class="form-group">
                    <label class="text-info" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control control" style="color:#000000" />
                </div>
                <div class="form-group">
                    <label class="text-info" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control control" />
                </div>
                <div class="form-group">
                    <label class="text-info" asp-for="SurName"></label>
                    <input asp-for="SurName" class="form-control control" />
                </div>
            </div>
            <div class="align-items-center col-12 col-lg-5 d-flex flex-column form-group mb-0 order-0 order-lg-1 text-center">
                <div class="mt-2"><img id="profile-image" class="img-fluid img-thumbnail d-block mx-auto" style="width: 200px;height: 180px;object-fit: cover;" src=@imgPath></div>
                <input asp-for="ProfileUploaded" class="mt-2 my-md-auto text-center" type="file" name="ProfileUploaded" onchange="ChangeImage(this.files);">
            </div>
            <div class="col-12 col-lg-5 order-2 order-lg-2">
                <div class="form-group">
                    <label class="text-info" asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control control" />
                </div>
                <div class="form-group">
                    <label class="text-info" asp-for="Age"></label>
                    <input asp-for="Age" class="form-control control" />
                </div>
                <div class="form-group">
                    <label class="text-info" asp-for="City"></label>
                    <input asp-for="City" class="form-control control" />
                </div>
            </div>
            <div class="col-12 col-lg-5 order-3 order-lg-3 mt-lg-3">
                <div class="form-group text-center">
                    <label class="text-info" asp-for="PersonalInfoVisible"></label>
                    <input asp-for="PersonalInfoVisible" class="form-check-inline" />
                </div>
                <div class="form-group text-center">
                    <label class="text-info" asp-for="SelectedFilmsVisible"></label>
                    <input asp-for="SelectedFilmsVisible" class="form-check-inline" />
                </div>
            </div>
            <div class="col-12 col-lg-3 order-12 order-lg-4"><button type="submit" class="btn border-orange w-100">Сохранить</button></div>
        </form>
    </div>
</div>