
<div id="slideshow">
    <div class="slide-arrow-left" onclick="SlideDown();">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
    </div>
    @foreach (Hall hall in ViewData["Halls"] as IEnumerable<Hall>)
    {
        <div class="slide">
            @{
                <div class="slide-image" style="background-image:url('@Url.Content("~/images/Halls/" + hall.Image)'"></div>
                <div class="slide-title-cover">
                    <h3>@hall.Name</h3>
                    <p>@hall.SeatsNumber.ToString() мест</p>
                </div>
            }
        </div>
    }
    <div class="slide-arrow-right" onclick="SlideUp();">
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
    </div>
</div>
