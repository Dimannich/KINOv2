@{
    List<Film> films = ViewData["Featured"] as List<Film>;
}
<div class="row position-relative mb-4">
    <div class="swiper-container swiper-container-featured">

        <div class="swiper-wrapper">
            @foreach (var film in films)
            {
                <div class="swiper-slide col-12 col-sm-4 col-md-4 swiper-slide-featured">
                    <a asp-area="" asp-controller="Home" asp-action="Film" asp-route-id="@film.LINK">
                        <img class="img-fluid" style="width:inherit" src="@Url.Content("~/images/Posters/" + film.Poster)" />
                    </a>
                </div>
            }
        </div>



    </div>
    <div class="d-flex justify-content-center align-items-center px-3 w-100 swiper-pagination swiper-pagination-featured" style="bottom: -35px; left:50%; transform: translate(-50%, -50%) !important;     height: 20px;
    background-color: rgba(255,255,255,0.3); background-clip:content-box;"></div>
</div>