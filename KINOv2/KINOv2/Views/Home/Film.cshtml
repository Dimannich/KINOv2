@using System.Globalization

@{
    var film = (ViewData["Film"] as Film);
    bool favorite = (Convert.ToBoolean(ViewData["Favorite"]));
    bool filmRated = (Convert.ToBoolean(ViewData["FilmRated"]));
}

<div class="film-container">
    <div class="row mx-auto" style="max-width: 1000px;">
        <div class="col-12 col-sm-5 col-md-5 " style=" ">
            @*<div class="poster-image-large img-responsive" style="background-image:url('@Url.Content("~/images/Posters/" + film.Poster)'); margin-top:25px;">

                </div>*@
            <img class="img-fluid" src="@Url.Content("~/images/Posters/" + film.Poster)" />

            <div class="row mx-auto my-auto">
                <div id="film-rating" class="col-12 col-md-12 @(User.Identity.IsAuthenticated ? "":"rate-disabled") @(filmRated ? "voted" : "")">
                    <input type="hidden" class="votes" value="@(film.Rating.Count )" />
                    <input type="hidden" class="val" value="@film.LocalRating" />
                    <input type="hidden" class="vote-id" value="@film.LINK" />
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-7 col-md-7 ">
            <h1 class="position-relative">
                @film.Name
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="#" id="favorite" class="ml-3 ml-md-3 position-absolute" style="top:auto; right:auto"><i data-film-id="@film.LINK" id="flag" style="font-size:40px; color:#f6a21c; margin-top:10px;" title="@(favorite ? "Убрать из избранного" : "Добавить в избранное")" class="fa @(favorite ? "fa-bookmark" : "fa-bookmark-o" )"></i></a>
                }

            </h1>


            <div style="margin-bottom:5px;" class="row">
                <label class="text-info col" asp-for="@film.ReleaseYear"></label>
                <span class="col">@film.ReleaseYear</span>
            </div>
            <div style="margin-bottom:5px;" class="row">
                <label class="text-info col" asp-for="@film.Duration"></label>
                <span class="col">@film.Duration</span>
            </div>
            <div style="margin-bottom:5px;" class="row">
                <label class="text-info col" asp-for="@film.CountryLINK"></label>
                <span class="col">@film.Country.Name</span>
            </div>
            <div style="margin-bottom:5px;" class="row">
                <label class="text-info col" asp-for="@film.GenreLINK"></label>
                <span class="col">@film.Genre.Name</span>
            </div>
            <div style="margin-bottom:5px;" class="row">
                <label class="text-info col" asp-for="@film.DirectorLINK"></label>
                <span class="col">@film.Director.Name @film.Director.Surname</span>
            </div>
            <div style="margin-bottom:5px;" class="row">
                <label class="text-info col-6" asp-for="@film.AgeLimitLINK"></label>
                <span class="age-label offset-1">@film.AgeLimit.Value</span>

                @*<div class="col-5 col-md-4">
                        <label style="display:block" class="text-info" asp-for="@film.ReleaseYear"></label>
                        <label style="display:block" class="text-info" asp-for="@film.Duration"></label>
                        <label style="display:block" class="text-info" asp-for="@film.CountryLINK"></label>
                        <label style="display:block" class="text-info" asp-for="@film.GenreLINK"></label>
                        <label style="display:block" class="text-info" asp-for="@film.DirectorLINK"></label>
                        <label style="display:block" class="text-info" asp-for="@film.AgeLimitLINK"></label>
                    </div>
                    <div class="col-6 col-md-6">
                        <span style="display:block; margin-bottom:.5rem;">@film.ReleaseYear</span>
                        <span style="display:block; margin-bottom:.5rem;">@film.Duration</span>
                        <span style="display:block; margin-bottom:.5rem;">@film.Country.Name</span>
                        <span style="display:block; margin-bottom:.5rem;">@film.Genre.Name</span>
                        <span style="display:block; margin-bottom:.5rem;">@film.Director.Name @film.Director.Surname</span>
