@model UserRequest
@{
    ViewData["Title"] = "Обратная связь";
}

<div class="container px-0 px-sm-3">
    <div class="row">
        <h1 class="col-12">Обратная связь</h1>
        <div class="col-md-8">
            @Html.Partial("_StatusMessage", ViewData["Message"])
            <form method="post">
                <div class="form-group col-lg-6 px-0">
                    <label class="text-info" asp-for="UserRequestSubject"></label>
                    <select asp-for="UserRequestSubject" asp-items="@(ViewData["Subjects"] as SelectList)" class="form-control control"></select>
                    <span asp-validation-for="UserRequestSubject" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-6 px-0">
                    <label class="text-info" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-info" asp-for="Content"></label>
                    <textarea asp-for="Content" rows="5" class="form-control control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <button type="submit" asp-route="support" class="btn border-orange col-lg-6 px-0">Отправить</button>
            </form>
        </div>
    </div>
</div>


